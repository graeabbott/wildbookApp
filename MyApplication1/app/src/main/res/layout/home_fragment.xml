<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_red_light"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.affanfarid.myapplication1.HomeFragment">

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="HOME FRAGMENT" />

    <Button
        android:id="@+id/albumButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:text="@string/title_album"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

         />

    <Button
        android:id="@+id/cameraButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:onClick="onTakePhotoClick_Button"
        android:text="@string/title_camera"
        android:layout_centerHorizontal="true"

         />

    <TextView
        android:id="@+id/locationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Location Available"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/locationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:layout_gravity="bottom"
        android:text="Location"
        android:layout_alignParentBottom="true"/>

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="left|center_horizontal|center"
        app:srcCompat="@android:drawable/ic_menu_help" />

</RelativeLayout>
